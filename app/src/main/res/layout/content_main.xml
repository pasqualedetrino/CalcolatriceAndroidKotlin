<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="example.javatpoint.com.kotlininternalstoragereadwrite.MainActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


        <Button
                android:text="Canc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="427dp"
                tools:layout_editor_absoluteX="200dp" android:id="@+id/canc" android:layout_alignParentEnd="true"
                android:layout_marginEnd="160dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="184dp"/>
        <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="427dp"
                tools:layout_editor_absoluteX="200dp" android:id="@+id/diviso" android:layout_alignParentEnd="true"
                android:layout_marginEnd="101dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="283dp"/>
        <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="427dp"
                tools:layout_editor_absoluteX="200dp" android:id="@+id/per" android:layout_alignParentEnd="true"
                android:layout_marginStart="99dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="284dp" android:layout_marginEnd="223dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteY="83dp"
                android:id="@+id/addendo1" android:hint="addendo1" tools:layout_editor_absoluteX="99dp"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="39dp" android:inputType="number"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteY="193dp" tools:layout_editor_absoluteX="99dp" android:id="@+id/addendo2"
                android:hint="addendo2" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="115dp" android:inputType="number"/>
        <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="427dp"
                tools:layout_editor_absoluteX="32dp" android:id="@+id/som" android:layout_alignParentStart="true"
                android:layout_marginStart="99dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="387dp"/>
        <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="427dp"
                tools:layout_editor_absoluteX="200dp" android:id="@+id/sottr" android:layout_alignParentEnd="true"
                android:layout_marginEnd="101dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="387dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                tools:layout_editor_absoluteY="529dp" tools:layout_editor_absoluteX="74dp" android:id="@+id/risultato"
                android:hint="risultato" android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_marginEnd="99dp" android:layout_marginTop="550dp" android:singleLine="false"
                android:selectAllOnFocus="true"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>